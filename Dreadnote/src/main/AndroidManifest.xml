<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mikeroll.dreadnote.app" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.mikeroll.dreadnote.frontend.Dashboard"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mikeroll.dreadnote.frontend.NoteScreen"
            android:parentActivityName="com.mikeroll.dreadnote.frontend.Dashboard"
            android:label="@string/title_activity_note_screen"
            android:theme="@style/NoteScreen">
            <!-- DEBUG -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <!-- END DEBUG -->
        </activity>
    </application>

</manifest>
